	@Styles.Render("~/bundles/estilosCSSModelo")
	@Styles.Render("~/bundles/estilosEmpresa")
	@Scripts.Render("~/bundles/funcionesEmpresaPruebaManejo")
	@Scripts.Render("~/bundles/calendarioEspaniol")
}

<div id="divBannerTituloModelo">
	<span id="spnTituloModelo">
		Prueba de manejo
	</span>
</div>
<div id="divBannerTituloCaracteristicasModelo">
	<ul id="ulListaPaginasHermanas">
		<li><a href="/empresa/inicio" rel="external">Horarios</a></li>
		<li><a href="/empresa/internos" rel="external">Internos</a></li>
		<li><a href="/empresa/encuesta_venta" rel="external">Encuesta satisfacción venta</a></li>
