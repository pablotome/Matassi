@{
	ViewBag.Title = "Encuestas";
	Layout = "~/Areas/Web/Views/Shared/_LayoutMatassi.cshtml";
}

<style type="text/css">
	.btn {
		background: #3498db;
		background-image: -webkit-linear-gradient(top, #3498db, #2980b9);
		background-image: -moz-linear-gradient(top, #3498db, #2980b9);
		background-image: -ms-linear-gradient(top, #3498db, #2980b9);
		background-image: -o-linear-gradient(top, #3498db, #2980b9);
		background-image: linear-gradient(to bottom, #3498db, #2980b9);
		-webkit-border-radius: 8;
		-moz-border-radius: 8;
		border-radius: 8px;
		font-family: 'VWHeadWeb-Regular', Arial;
		color: #ffffff;
		font-size: 16px;
		padding: 10px 20px 10px 20px;
		text-decoration: none;
	}

		.btn:hover {
			background: #3cb0fd;
			background-image: -webkit-linear-gradient(top, #3cb0fd, #3498db);
			background-image: -moz-linear-gradient(top, #3cb0fd, #3498db);
			background-image: -ms-linear-gradient(top, #3cb0fd, #3498db);
			background-image: -o-linear-gradient(top, #3cb0fd, #3498db);
			background-image: linear-gradient(to bottom, #3cb0fd, #3498db);
			text-decoration: none;
		}
</style>

<div class="infoModelo">
	<a href="#" class="modeloActual">@ViewBag.Title</a>
	<div class="infoModeloTitulos">
		<ul class="">
			<li>|</li>
			<li>
				<span></span>
			</li>
		</ul>
	</div>
</div>

<div style="margin: 10px 9px 9px 9px; display:block; position: relative; height: auto; overflow:hidden;">
	<div class="columnaIzquierda">
		&nbsp;
	</div>
	<div class="columnaDerecha">
		<img src="~/Content/images/ScirocoAsesoramiento.png" />
		<div class="TituloPagina oculto">Encuestas de Venta y Post Venta</div>
		<br />
		<br />
		<br />

		<div style="width:100%; text-align:center;background-color:red;">
			<div style="float:left;text-align:center;width:50%;">
				@Html.ActionLink("Encuesta de satisfacción de Venta", "EncuestaSatisfaccionVenta", "Empresa", null, new { @class = "btn" })
			</div>
			<div style="float:right;text-align:center;width:50%;">
				@Html.ActionLink("Encuesta de satisfacción de Post Venta", "EncuestaSatisfaccionPostVenta", "Empresa", null, new { @class = "btn" })
			</div>
		</div>
		<br />
		<br />
		<br />
		<br />
	</div>
</div>